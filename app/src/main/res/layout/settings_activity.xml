<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <!-- アカウント入力 -->
    <EditText
        android:id="@+id/accountEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="反応するアカウント名"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SNS選択 -->
    <RadioGroup
        android:id="@+id/snsGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/accountEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LINE"/>
    </RadioGroup>

    <!-- アイコン選択（横並び） -->
    <LinearLayout
        android:id="@+id/iconRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/snsGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/iconSelectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_icon"/>

        <!-- プレビュー（透明グレーの丸） -->
        <ImageView
            android:id="@+id/iconPreview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_circle_gray"
            android:scaleType="centerCrop"
            android:contentDescription="@string/icon_preview"/>
    </LinearLayout>

    <!-- 通知タイプ -->
    <TextView
        android:id="@+id/notifyTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通知タイプ"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/iconRow"
        app:layout_constraintStart_toStartOf="parent"/>

    <RadioGroup
        android:id="@+id/notifyTypeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/notifyTypeLabel"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioLover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恋人"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioOshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推し"/>
    </RadioGroup>

    <!-- フラッシュ -->
    <Switch
        android:id="@+id/flashSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="フラッシュを点灯する"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/notifyTypeGroup"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 保存 -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/flashSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

