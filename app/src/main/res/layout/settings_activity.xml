<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/background_house">

    <!-- アカウント入力 -->
    <EditText
        android:id="@+id/accountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="特別な人の名前"
        android:background="@drawable/account_wood"
        android:textColor="@android:color/white"
        android:textColorHint="#CCFFFFFF"
        android:paddingStart="40dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:textSize="16sp"/>


    <!-- SNS選択（ボタン＋アイコンを一体化） -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginTop="8dp">

        <!-- 背景 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:src="@drawable/site_wood"
            android:scaleType="fitXY"/>

        <!-- SNS 選択 -->
        <RadioGroup
            android:id="@+id/snsGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- X セット -->
            <LinearLayout
                android:id="@+id/xSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="48dp">

                <RadioButton
                    android:id="@+id/radioX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:buttonTint="@android:color/white"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/x"
                    android:contentDescription="X"/>
            </LinearLayout>

            <!-- LINE セット -->
            <LinearLayout
                android:id="@+id/lineSet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/radioLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/white"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/line"
                    android:contentDescription="LINE"/>
            </LinearLayout>

        </RadioGroup>
    </FrameLayout>



    <LinearLayout
        android:id="@+id/iconRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/iconSelectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="アイコンをえらぶ"/>

        <ImageView
            android:id="@+id/iconPreview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_circle_gray"
            android:scaleType="centerCrop"
            android:contentDescription="@string/icon_preview"/>
    </LinearLayout>

    <!-- 通知タイプ -->
    <TextView
        android:id="@+id/notifyTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="あなたにとってどんな人？"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginTop="32dp"/>

    <RadioGroup
        android:id="@+id/notifyTypeGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioLover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好きな人"
            android:textColor="@android:color/white"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioOshi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="推し"/>
    </RadioGroup>

    <!-- フラッシュ -->
    <Switch
        android:id="@+id/flashSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="フラッシュを点灯する"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

    <!-- 保存 -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ほぞん"
        android:layout_marginTop="32dp"/>

</LinearLayout>


